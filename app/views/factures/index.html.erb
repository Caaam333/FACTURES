<h1> INDEX FACTURES</h1>

<div>
  <%= link_to "nouvelle facture", new_facture_path, class: 'btn btn-primary' %>
  <%= link_to "nouveau destinataire", new_recipient_path, class: 'btn btn-primary' %>
</div>

<ul>
  <% @factures.each do |facture| %>
    <li><%= link_to facture.limite, facture_path(facture) %></li>
    <li><%= link_to facture.price, facture_path(facture) %></li>
    <li><%= link_to facture.sold, facture_path(facture) %></li>
  <% end %>
</ul>