<div id="home-page">
  <%# <h1>VUE D'ENSEMBLE</h1> %>
  <div>
    <h2><%= link_to "Liste des bénéficiaires", recipients_path, class: '' %></h2>
    <div class="home-display-r-cards">
      <% @recipients.each do |recipient| %>
        <p class="home-r-card"><%= recipient.name %></p>
      <% end %>
    </div>
  </div>
  <div>
    <h2><%= link_to "Liste des factures", factures_path, class: '' %></h2>
    <div class="home-display-f-cards">
      <% @factures.each do |facture| %>
        <div class="home-f-line">
          <p class="home-f-name"><%= facture.recipient.name %></p> 
          <p class="home-f-price"><%= facture.price %></p>
          <a href="<%= edit_facture_path(facture) %>" class="home-f-price">
            <%= render inline: Rails.root.join("app/assets/images/edit.svg").read %>
          </a>
          <a href="<%= facture_path(facture) %>" data-method="delete" class="home-f-price">
            <%= render inline: Rails.root.join("app/assets/images/suppr.svg").read %>
          </a>
          <%= link_to image_tag('suppr.svg'),
              facture_path(facture),
              method: :delete,
              data: { confirm: "Tu es sûr ?" },
              class: "home-f-price" %>

          <%= link_to facture_path(facture) do %>
              <%= image_tag "suppr.svg",
              method: :delete,
              data: { confirm: "Tu es sûr ?" },
              class: "home-f-price" %>
          <% end %>
        
        </div>
      <% end %>
    </div>
  </div>
</div>


